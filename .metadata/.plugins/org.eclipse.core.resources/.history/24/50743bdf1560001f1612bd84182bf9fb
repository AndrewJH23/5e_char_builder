package com.example.Controllers;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;

import com.example.demo.*;
import com.example.demo.CharacterSheet;

@Controller
@RequestMapping("api/v1/charSheet/admin")
public class CommandController {
	@Autowired
	private CharRepo repo;
	
	@PostMapping("/character")
	public Character addCharacter(@RequestBody Character character) {
		return repo.save(character);
	}
	@PostMapping("/emptyCharacter")
	public Character addFreshCharacter() {
		Character c = new CharacterSheet();
		return repo.save(c);
	}
	@PutMapping("/character/{id}")
	public Character updateCharacter(@PathVariable int id) {
		Optional<Character> c = repo.findById(id);
		if(!c.isPresent()) {
			return null;
		}
		Character nc = new CharacterSheet();
		nc.setArmourCLass(c.get().getArmourCLass());
		nc.setHealth(c.get().getHealth());
		nc.setInitative(c.get().getInitative());
		nc.setSpeed(c.get().getSpeed());
		nc.setSkills(c.get().getSkills());
		nc.setStats(c.get().getStats());
		nc.setTempHealth(c.get().getTempHealth());
		nc.setName(c.get().getName());
		nc.setProficiencyBonus(c.get().getProficiencyBonus());
		nc.setBackground(c.get().getBackground());
		return repo.save(nc);
		}
	
	
	
}
